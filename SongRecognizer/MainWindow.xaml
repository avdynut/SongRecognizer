<Window x:Class="SongRecognizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SongRecognizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Connect" Click="OnConnectButtonClick"/>
        <TextBox Grid.Row="1" Name="PhoneNumber" Text="+375336517711"/>
        <Button Grid.Row="2" Content="Get Code" Click="OnGetCodeButtonClick"/>
        <TextBox Grid.Row="3" Name="ReceivedCode"/>
        <Button Grid.Row="4" Content="Auth" Click="OnAuthButtonClick"/>
        <Button Grid.Row="5" Content="Send Message" Click="OnSendMessageButtonClick"/>
    </Grid>
</Window>
